<!-- This is what shows the user when they are logged in? -->

<p id="notice"><%= notice %></p>

<div class="flex-container">

  <% unless @user.avatar == nil %>
    <div class="flex-child image">
      <%= image_tag(@user.avatar, class: 'avatar_img', style: 'width:300px') %>
    </div>
  <% end %>

  <div class="flex-child words">
    <p class="username">
        <%= @user.username %>
    </p>
  
    <p class="role">
      <%= @user.role %>
    </p>

    <p class="bio">
      <%= @user.bio %>
    </p>
  </div>

</div>

<div class="eof-buttons">
  <%= link_to 'Edit Profile', edit_user_path(@user) %> |
  <%= link_to 'Show All Users', users_path %>
</div>