<!-- viewing a user's profile -->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Home - Brand</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Archivo&amp;display=swap">
    <link rel="stylesheet" href="assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/css/pikaday.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<body style="background: rgb(252,249,246);">
    <nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-white portfolio-navbar gradient">
        <div class="container"><a class="navbar-brand logo" href="#">
            <%= image_tag ("2VD-logo.png"), :size => "30"%>
            </a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navbarNav"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarNav" style="text-align: left;">
                <ul class="navbar-nav ms-auto" style="margin-right:auto">
                    <li class="nav-item"><a class="nav-link" href="<%=root_path%>">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" href="<%= officer_path%>">Officers</a></li>
                    <li class="nav-item"><a class="nav-link" href="<%= users_path %>">Members</a></li>
                    <li class="nav-item"><a class="nav-link" href="<%= images_path %>">Images</a></li>
                    <% if User.find_by(email: current_admin.email).portfolio %>
                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle nav-link" aria-expanded="false" data-toggle="dropdown" href="#">Account</a>
                            <div class="dropdown-menu show">
                                <a class="dropdown-item" href="<%= user_path(User.find_by(email: current_admin.email)) %>">Profile </a>
                                <a class="dropdown-item" href="<%=portfolio_path(User.find_by(email: current_admin.email).portfolio) %>">Portfolio</a>
                            </div>
                        </li>
                    <% end %>
                </ul>
                <button class="btn btn-dark" onclick="location.href='<%= destroy_admin_session_path %>'" type="button">Sign Out</button>
            </div>
        </div>
    </nav>

<% @images.each do |image| %>
  <div class="flex-child image">
    <%= link_to image_path(image) do %>
      <%= image_tag(image.imageLink.service_url, class: 'portfolio image', style: 'width:300px') %>
    <% end %>
  </div>
<% end %>

<main class="page lanidng-page">
        <section class="portfolio-block block-intro" style="padding-top: 0px;">
            <div class="container">
                <p id="notice"><%= notice %></p>
                <h1 style="padding-bottom: 35px;"><%= @user.username %>'s profile</h1>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-xl-3">
                        <div class="row">
                            <div class="col">
                            <%= image_tag(@user.avatar, class: 'avatar_img', style: 'width:250px;height: 250px') %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h3 style="padding-top: 20px;"><%= @user.username %></h3>
                                <h5 style="padding-top: 2px; font-size: 120%; font-style:italic;"><%= @user.role %></h5>
                                <p style="font-size: 100%;"><%= @user.bio %></p>
                                <div class="row">
                                    <div class="col">
                                        <div class="row">
                                            <div class="col">
                                            <!-- make it so that only the logged in user can see this button . current_admin.email == who is signed in now . User.find(params[:id]).email == the profile we're looking at,  -->
                                            <% if User.find(params[:id]).email == current_admin.email %>
                                                <button class="btn btn-dark" onclick="location.href='<%= edit_user_path(@user)%>'" type="button">Edit Profile</button>
                                            <% end %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-xl-9">
                    <%= image_tag('image1.jpg', style: 'width:300px;height: 300px') %>
                    <%= image_tag('image2.jpg', style: 'width:300px;height: 300px') %>
                    <%= image_tag('image3.jpg', style: 'width:300px;height: 300px') %>
                    <%= image_tag('image4.jpg', style: 'width:300px;height: 300px') %>
                    <%= image_tag('image5.jpg', style: 'width:300px;height: 300px') %>
                    <%= image_tag('image6.jpg', style: 'width:300px;height: 300px') %>
                    <%= image_tag('image7.jpg', style: 'width:300px;height: 300px') %>
                    <%= image_tag('image8.jpg', style: 'width:300px;height: 300px') %>
                    <%= image_tag('image9.jpg', style: 'width:300px;height: 300px') %>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="page-footer">
    <div class="container">
        <a href="https://discord.gg/YmxbzC79" title="Discord"><i class="fab fa-discord" style="font-size:30px"></i></a>
        <a href="https://www.facebook.com/groups/926735031021170/" title="Facebook"><i class="fab fa-facebook-f" style="font-size:30px"></i></a>
        <a href="https://www.instagram.com/tamu_2vd/" title="Instagram"><i class="fab fa-instagram" style="font-size:30px"></i></a>
        <a href="https://twitter.com/2vdTamu" title="Twitter"><i class="fab fa-twitter" style="font-size:30px"></i></a>
    </div>
    </footer>

    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/pikaday.min.js"></script>
    <script src="assets/js/theme.js"></script>
</body>

</html>