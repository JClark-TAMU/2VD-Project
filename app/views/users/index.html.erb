<!-- showing all users page -->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>User Directory - 2VD</title>
    <link rel="stylesheet" href="app/assets/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Archivo&display=swap">
    <link rel="stylesheet" href="app/assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/css/pikaday.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        
</head>

  <body style="background: rgb(232, 242, 255)">
    

    <main class="page landing-page">
      <p id="notice"><%= notice %></p>
      <h1 class="text-center" style="padding-top: 7%;">Members of 2VD</h1>
      <section class="portfolio-block skills">
        <div class="container">
            <div class="row" >
              <% @users.each do |user| %>
                <div class="col-md-4" style="background: rgb(232, 242, 255)">
                    <div class="card special-skill-item border-0" style="background: rgb(232, 242, 255)">
                        <div class="card-header bg-transparent border-0" style="background: rgb(232, 242, 255)"></div>
                        <div class="card-body" style="background: rgb(232, 242, 255)">
                            <% unless user.avatar == nil %>
                              <%= image_tag(user.avatar, class: 'avatar_img', style: 'width:200px;height: 200px') %>
                            <% end %>
                            <h3 class="card-title"><%= link_to user.username, user, style: 'text-decoration:none;'%></h3>
                            <p class="card-text" style="font-style:italic; padding-top:0%"><%= user.role %></p>
                            <p class="card-text" style="padding-top:0%"><%= user.bio %></p>
                            <% if user.portfolio %>
                            <p><%= link_to user.portfolio.title, user.portfolio %></p>
                            <% end %>
                            <% if User.find_by(email: current_admin.email).isAdmin %>
                              <%= link_to 'Edit', edit_user_path(user) %> | 
                              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
                            <% end %>
                        </div>
                    </div>
                </div>
              <% end %>
            </div>
        </div>
      </section>
    </div>
    </main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/pikaday.min.js"></script>
    <script src="app/assets/javascript/channels/bootstrap.min.js"></script>
    <script src="app/assets/javascript/packs/application.js"></script> 
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  </body>

</html>