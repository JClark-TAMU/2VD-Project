<!-- showing all users page -->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>User Directory - 2VD</title>
    <link rel="stylesheet" href="app/assets/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Archivo&display=swap">
    <link rel="stylesheet" href="app/assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/css/pikaday.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        
</head>

  <body style="background: rgb(232, 242, 255)">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-white portfolio-navbar gradient" style="background: linear-gradient(to right, #a63cac, #3c92ac);">
        <div class="container">
            <a class="navbar-brand logo" href="#"></a>
            <%= image_tag ("2VD-logo.png"), :size => "40" %>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="visually-hidden">Toggle navigation</span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav" style="text-align: right;">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="<%=root_path%>">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" href="<%= officer_path%>">Officers</a></li>
                    <li class="nav-item"><a class="nav-link" href="<%= users_path %>">Members</a></li>
                    <li class="nav-item"><a class="nav-link" href="<%= images_path %>">Images</a></li>
                    <% if User.find_by(email: current_admin.email).portfolio %>
                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle nav-link" aria-expanded="false" data-toggle="dropdown" href="#">Account</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="<%= user_path(User.find_by(email: current_admin.email)) %>">Profile </a>
                                <a class="dropdown-item" href="<%= portfolio_path(User.find_by(email: current_admin.email).portfolio) %>">Portfolio</a>
                            </div>
                        </li>
                    <% end %>
                </ul>
                <button class="btn btn-dark" onclick="location.href='<%= destroy_admin_session_path %>'" type="button">Sign Out</button>
            </div>
        </div>
    </nav>

    <main class="page landing-page">
      <p id="notice"><%= notice %></p>
      <h2 class="text-center" style="padding-bottom:3%">Members of 2VD</h2>
      <table style="margin-left:auto; margin-right:auto;">
        <thead>
          <tr style="">
            <th style="padding-bottom:2%"></th>
            <th style="padding-bottom:2%">Username</th>
            <th style="padding-bottom:2%">Email</th>
            <% if User.find_by(email: current_admin.email).isAdmin %>
              <th style="padding-bottom:2%">Isadmin</th>
            <% end %>
            <th style="padding-bottom:2%">Role</th>
            <th style="padding-bottom:2%">Bio</th>
            <th style="padding-bottom:2%">Portfolio</th>  
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag(user.avatar, class: 'avatar_img', style: 'width:100px;height: 100px') %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <% if User.find_by(email: current_admin.email).isAdmin %>
                <td><%= user.isAdmin %></td>
              <% end %>
              <td><%= user.role %></td>
              <td><%= user.bio %></td>
              <% if user.portfolio %>
                <td><%= link_to user.portfolio.title, user.portfolio %></td>
              <% end %>
              <td><%= link_to 'Show Profile', user %></td>
              <% if User.find_by(email: current_admin.email).isAdmin %>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>
    </main>
    <footer class="page-footer">
      <div class="container">
          <a href="https://discord.gg/YmxbzC79" title="Discord"><i class="fab fa-discord" style="font-size:30px"></i></a>
          <a href="https://www.facebook.com/groups/926735031021170/" title="Facebook"><i class="fab fa-facebook-f" style="font-size:30px"></i></a>
          <a href="https://www.instagram.com/tamu_2vd/" title="Instagram"><i class="fab fa-instagram" style="font-size:30px"></i></a>
          <a href="https://twitter.com/2vdTamu" title="Twitter"><i class="fab fa-twitter" style="font-size:30px"></i></a>
      </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/pikaday.min.js"></script>
    <script src="app/assets/javascript/channels/bootstrap.min.js"></script>
    <script src="app/assets/javascript/packs/application.js"></script> 
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  </body>

</html>