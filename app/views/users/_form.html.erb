<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Home - Brand</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Archivo&amp;display=swap">
    <link rel="stylesheet" href="assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/css/pikaday.min.css">
</head>

  <h1 style="text-align: center;margin-top: 0%;margin-bottom: 3%;">Edit Profile</h1>
  <form>
    <div class="form-row align-items-center">
      <div class="col-auto">
        <label for="full_name">Name</label>
        <input class="form-control" type = "text" id = "full_name" name = "user[full_name]" value="<%= @user.full_name %>">
      </div>

      <br>
      <div class="col-auto">
        <label for="user_username">Username</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">@</div>
          </div>
          <input class="form-control" type = "text" id = "user_username" name = "user[username]" value = "<%= @user.username %>">
        </div>
      </div>

      <br>
      <div class="col-auto">
        <label for="avatar_url">Avatar</label>
        <input class="form-control" type = "text" id = "avatar_url" name = "user[avatar]" value = "<%= @user.avatar %>">
      </div>

      <% if User.find_by(email: current_admin.email).isAdmin %> 
      <br>
        <div class="field">
          <%= form.label :isAdmin, "Admin" %>
          <%= form.check_box :isAdmin %>
        </div>
      <% end %> 

      <br>
      <div class="col-auto">
        <label for="user_role">Role</label>
        <%= form.select :role, @roles %>
      </div>

      <br>
      <div class="col-auto">
        <label for="user_bio">Bio</label>
        <input class="form-control" type = "text" id = "user_bio" name = "user[bio]" value = "<%= @user.bio %>">
      </div> 

      <br>
      <div class="col-auto" style="padding-top:4%">
        <input type="submit" class="btn btn-dark" id = "Update User" value="Save Changes" style="display: block; margin: 0 auto;">
      </div>
    </div>
    <% end %>
  </form>
</html>
