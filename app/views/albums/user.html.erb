<p id="notice"><%= notice %></p>
<section> 
	<h1 style="padding-top: 7%;">Albums</h1>
	<% if User.find_by(email: current_admin.email).isAdmin || User.find_by(email: current_admin.email) == @user %>
	  <button class="btn btn-dark float-end" type="button" style="color: white;"><%= link_to 'New Album', new_album_path(id: @user.id), style: "color:#FFFFFF; text-decoration:none;"%></button>
	<% end %>
</section>

<section class="text-center d-xxl-flex align-items-center align-content-center justify-content-xxl-center align-items-xxl-center portfolio-block project">
    <div class="table-responsive text-center d-xxl-flex justify-content-center align-items-center align-self-center mx-auto justify-content-xxl-center align-items-xxl-center" style="width: 80%;border-width: 3px;border-radius: 20px;border-style: solid">
        <table class="table table-striped table-bordered">
		  <thead>
			<tr>
			  <th>Name</th>
			  <th>Details</th>
			  <th colspan="3"></th>
			</tr>
		  </thead>

		  <tbody>
			<% @albums.each do |album| %>
			  <tr>
				<td><%= link_to album.name, album %></td>
				<td><%= album.caption %></td>
				<% if User.find_by(email: current_admin.email).isAdmin || User.find_by(email: current_admin.email) == @user %>
				  <td style="width:50px;"><button class="btn btn-dark" type="button" style="color: white;"><%= link_to "Edit", edit_album_path(album), style: "color:#FFFFFF; text-decoration:none;"%></button></td>
				  <td style="width:150px;"><button class="btn btn-dark" type="button" style="color: white;"><%= link_to 'Add Image', add_album_path(album), style: "color:#FFFFFF; text-decoration:none;"%></button></td>
				  <td style="width:50px;"><button class="btn btn-danger" type="button" style="color: white;"><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, style: "color:#FFFFFF; text-decoration:none;"%></button></td>
				<% end %>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>
</section>
<br>

<%= link_to "Back to Dashboard", root_path %>