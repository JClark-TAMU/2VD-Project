<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.caption %></td>
        <td><%= link_to 'Show', album %></td>
        <% if User.find_by(email: current_admin.email).isAdmin || User.find_by(email: current_admin.email) == @user %>
          <td><%= link_to 'Edit', edit_album_path(album) %></td>
          <td><%= link_to 'Add Image', add_album_path(album) %></td>
          <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if User.find_by(email: current_admin.email).isAdmin || User.find_by(email: current_admin.email) == @user %>
  <%= link_to 'New Album', new_album_path %> |
<% end %>
<%= link_to "Back to Dashboard", root_path %>